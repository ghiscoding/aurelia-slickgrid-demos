{
  "name": "aurelia-slickgrid-demo-bs4",
  "description": "An Aurelia-Slickgrid client application demo with Bootstrap 4.",
  "version": "4.0.0",
  "homepage": "https://github.com/ghiscoding/aurelia-slickgrid",
  "bugs": {
    "url": "https://github.com/ghiscoding/aurelia-slickgrid/issues"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/ghiscoding/aurelia-slickgrid"
  },
  "license": "MIT",
  "scripts": {
    "start": "webpack serve --env development",
    "analyze": "webpack --env production --analyze",
    "build": "webpack --env production",
    "build:dev": "webpack --env development",
    "prebuild-demo": "npm run del-ghpage",
    "build-demo": "npm run build",
    "postbuild-demo": "npm-run-all copy-ghpage:dist",
    "copy-ghpage:dist": "cross-env copyfiles --up 1 dist/**/*.* ../docs",
    "del-ghpage": "cross-env rimraf ../docs/**/*.*",
    "test": "au test"
  },
  "dependencies": {
    "@slickgrid-universal/composite-editor-component": "^1.3.0",
    "@slickgrid-universal/custom-tooltip-plugin": "^1.3.0",
    "@slickgrid-universal/excel-export": "^1.3.0",
    "@slickgrid-universal/graphql": "^1.3.0",
    "@slickgrid-universal/odata": "^1.3.0",
    "@slickgrid-universal/rxjs-observable": "^1.3.0",
    "@slickgrid-universal/text-export": "^1.3.0",
    "aurelia-animator-css": "^1.0.4",
    "aurelia-bootstrapper": "^2.4.0",
    "aurelia-fetch-client": "^1.8.2",
    "aurelia-http-client": "^1.3.1",
    "aurelia-i18n": "^3.1.4",
    "aurelia-polyfills": "^1.3.4",
    "aurelia-slickgrid": "^4.2.0",
    "bootstrap": "^4.6.1",
    "font-awesome": "^4.7.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "i18next-xhr-backend": "^3.2.2",
    "jquery": "^3.6.0",
    "moment-mini": "^2.24.0",
    "popper.js": "^1.16.1",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.2.0",
    "@fnando/sparkline": "^0.3.10",
    "@types/bluebird": "^3.5.36",
    "@types/fnando__sparkline": "^0.3.4",
    "@types/jest": "^28.1.2",
    "@types/jquery": "^3.5.14",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@types/webpack": "^5.28.0",
    "aurelia-cli": "^2.0.3",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-pal-nodejs": "^2.0.0",
    "aurelia-testing": "^1.1.0",
    "aurelia-tools": "^2.0.0",
    "aurelia-webpack-plugin": "^5.0.4",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "del": "^6.1.1",
    "file-loader": "^6.2.0",
    "gulp": "^4.0.2",
    "html-loader": "^3.1.2",
    "html-webpack-plugin": "^5.5.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jest": "^28.1.1",
    "jest-cli": "^28.1.1",
    "jest-transform-stub": "^2.0.0",
    "mini-css-extract-plugin": "^2.6.1",
    "minimatch": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "promise-polyfill": "^8.2.3",
    "sass": "^1.52.3",
    "sass-loader": "^13.0.0",
    "style-loader": "^3.3.1",
    "through2": "^4.0.2",
    "tree-kill": "^1.2.2",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "vinyl-fs": "^3.0.3",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.spec\\.(ts|js)$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.ts"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.spec.{js,ts}",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
