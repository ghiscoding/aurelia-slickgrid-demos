{
  "name": "slickgrid-test-cli",
  "version": "1.0.0",
  "description": "Slickgrid components made available in Aurelia",
  "license": "MIT",
  "keywords": [
    "aurelia",
    "plugin",
    "slickgrid"
  ],
  "homepage": "https://github.com/ghiscoding/aurelia-slickgrid",
  "bugs": {
    "url": "https://github.com/ghiscoding/aurelia-slickgrid/issues"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/ghiscoding/aurelia-slickgrid"
  },
  "dependencies": {
    "aurelia-bootstrapper": "^2.3.3",
    "aurelia-animator-css": "^1.0.4",
    "aurelia-http-client": "^1.3.1",
    "aurelia-i18n": "^2.3.2",
    "aurelia-slickgrid": "^2.22.2",
    "bluebird": "^3.4.1",
    "bootstrap": "^4.5.2",
    "flatpickr": "^4.2.4",
    "font-awesome": "^4.7.0",
    "i18next-xhr-backend": "^1.5.0",
    "jquery": "^3.2.1",
    "moment": "^2.18.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.9.0",
    "aurelia-cli": "^2.0.2",
    "aurelia-testing": "^1.0.0",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "minimatch": "^3.0.4",
    "promise-polyfill": "^8.1.3",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.11.5",
    "@babel/core": "^7.11.6",
    "@babel/register": "^7.11.5",
    "regenerator-runtime": "^0.13.7",
    "del": "^5.1.0",
    "requirejs": "^2.3.6",
    "text": "requirejs/text",
    "gulp-babel": "^8.0.0",
    "gulp-cache": "^1.1.3",
    "gulp-changed-in-place": "^2.0.3",
    "connect": "^3.7.0",
    "connect-history-api-fallback": "^1.6.0",
    "connect-injector": "^0.4.4",
    "serve-static": "^1.14.1",
    "socket.io": "^2.3.0",
    "open": "^7.2.1",
    "server-destroy": "^1.0.1",
    "debounce": "^1.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-watch": "^5.0.1",
    "gulp-if": "^3.0.0",
    "jest": "^26.4.2",
    "jest-cli": "^26.4.2",
    "jest-transform-stub": "^2.0.0",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-pal-nodejs": "^2.0.0",
    "babel-jest": "^26.3.0"
  },
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build": "au build --env prod",
    "start": "au run",
    "test": "au test"
  },
  "engines": {
    "node": ">=10.12.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "\\.spec\\.js$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.js"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/*.spec.js",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
