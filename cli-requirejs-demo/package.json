{
  "name": "slickgrid-test-cli",
  "version": "1.0.0",
  "description": "Slickgrid components made available in Aurelia",
  "license": "MIT",
  "keywords": [
    "aurelia",
    "plugin",
    "slickgrid"
  ],
  "homepage": "https://github.com/ghiscoding/aurelia-slickgrid",
  "bugs": {
    "url": "https://github.com/ghiscoding/aurelia-slickgrid/issues"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/ghiscoding/aurelia-slickgrid"
  },
  "dependencies": {
    "@slickgrid-universal/excel-export": "^1.0.0",
    "@slickgrid-universal/graphql": "^1.0.0",
    "@slickgrid-universal/odata": "^1.0.0",
    "@slickgrid-universal/text-export": "^1.0.0",
    "aurelia-bootstrapper": "^2.3.3",
    "aurelia-animator-css": "^1.0.4",
    "aurelia-http-client": "^1.3.1",
    "aurelia-i18n": "^3.1.4",
    "aurelia-slickgrid": "^4.0.0",
    "bluebird": "^3.7.2",
    "bootstrap": "^4.6.0",
    "font-awesome": "^4.7.0",
    "i18next-xhr-backend": "^3.2.2",
    "jquery": "^3.5.1",
    "moment": "^2.29.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.15.4",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.15.6",
    "@babel/core": "^7.15.5",
    "@babel/register": "^7.15.3",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.0.2",
    "@types/jquery": "^3.5.6",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.10.2",
    "@types/webpack": "^5.28.0",
    "aurelia-cli": "^2.0.3",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-pal-nodejs": "^2.0.0",
    "aurelia-testing": "^1.0.0",
    "babel-jest": "^27.2.4",
    "babel-eslint": "^10.1.0",
    "connect": "^3.7.0",
    "connect-history-api-fallback": "^1.6.0",
    "connect-injector": "^0.4.4",
    "debounce": "^1.2.1",
    "del": "^6.0.0",
    "eslint": "^7.32.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-cache": "^1.1.3",
    "gulp-changed-in-place": "^2.3.0",
    "gulp-eslint": "^6.0.0",
    "gulp-if": "^3.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-watch": "^5.0.1",
    "jest": "^27.2.4",
    "jest-cli": "^27.2.4",
    "jest-transform-stub": "^2.0.0",
    "minimatch": "^3.0.4",
    "open": "^8.2.1",
    "promise-polyfill": "^8.2.0",
    "regenerator-runtime": "^0.13.9",
    "requirejs": "^2.3.6",
    "serve-static": "^1.14.1",
    "server-destroy": "^1.0.1",
    "socket.io": "^4.2.0",
    "text": "requirejs/text"
  },
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build": "npx au build --env prod",
    "start": "npx au run",
    "test": "au test"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "\\.spec\\.js$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.js"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/*.spec.js",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
