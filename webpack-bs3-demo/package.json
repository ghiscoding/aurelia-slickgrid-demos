{
  "name": "aurelia-slickgrid-demo-bs3",
  "description": "An Aurelia-Slickgrid client application demo with Bootstrap 3.",
  "version": "2.0.0",
  "homepage": "https://github.com/ghiscoding/aurelia-slickgrid",
  "bugs": {
    "url": "https://github.com/ghiscoding/aurelia-slickgrid/issues"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/ghiscoding/aurelia-slickgrid"
  },
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --extractCss",
    "analyze": "webpack --env.production --analyze",
    "build": "webpack --env.production --extractCss",
    "build:dev": "webpack --extractCss",
    "prebuild-demo": "npm run del-ghpage",
    "build-demo": "npm run build",
    "postbuild-demo": "npm-run-all copy-ghpage:dist",
    "copy-ghpage:dist": "cross-env copyfiles --up 1 dist/**/*.* ../../aurelia-slickgrid/docs",
    "del-ghpage": "cross-env rimraf ../../aurelia-slickgrid/docs/**/*.*",
    "test": "au test"
  },
  "dependencies": {
    "aurelia-animator-css": "^1.0.4",
    "aurelia-bootstrapper": "^2.3.3",
    "aurelia-fetch-client": "^1.8.2",
    "aurelia-http-client": "^1.3.1",
    "aurelia-i18n": "^2.3.2",
    "aurelia-polyfills": "^1.3.4",
    "aurelia-slickgrid": "^2.23.0",
    "bluebird": "^3.7.2",
    "bootstrap": "^3.4.1",
    "font-awesome": "^4.7.0",
    "i18next-xhr-backend": "^1.5.1",
    "jquery": "^3.5.1",
    "moment": "^2.29.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/jest": "^26.0.15",
    "@types/jquery": "^3.5.4",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.9",
    "@types/webpack": "^4.41.25",
    "app-settings-loader": "^1.0.6",
    "aurelia-cli": "^2.0.2",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-pal-nodejs": "^2.0.0",
    "aurelia-testing": "^1.0.0",
    "aurelia-tools": "^2.0.0",
    "aurelia-webpack-plugin": "^4.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.3.2",
    "copyfiles": "^2.4.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "del": "^6.0.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "expose-loader": "^1.0.1",
    "file-loader": "^6.2.0",
    "gulp": "^4.0.2",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "mini-css-extract-plugin": "^1.3.1",
    "minimatch": "^3.0.4",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "promise-polyfill": "^8.2.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "through2": "^4.0.2",
    "tree-kill": "^1.2.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "url-loader": "^4.1.1",
    "vinyl-fs": "^3.0.3",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^4.1.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.spec\\.(ts|js)$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.ts"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.spec.{js,ts}",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
